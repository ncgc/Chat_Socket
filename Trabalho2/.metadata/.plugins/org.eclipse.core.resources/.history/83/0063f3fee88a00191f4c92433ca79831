package server;

import java.io.IOException;
import java.io.PrintStream;
import java.net.Socket;
import java.net.UnknownHostException;
import java.util.Scanner;

public class Client {
	private Socket socket;
	private String host;
	private int porta;
	
	public Client(String host, int porta) {
		this.host = host;
		this.porta = porta;
	}
	
	public void criaSocket() throws UnknownHostException, IOException {
		this.socket = new Socket(this.host, this.porta);
		System.out.println("Conexao estabelecida");
	}
	
	public void criaThread() {
		Recebedor r = new Recebedor(this.socket.getInputStream());
		new Thread(r).start();
	}

	private void trataConexao() throws IOException{
		try {	
			Scanner input = new Scanner(System.in);
			PrintStream output = new PrintStream(socket.getOutputStream());
			
			while (input.hasNextLine()){
				output.println(input.nextLine());
			}
			
			output.close();
			input.close();
		} catch (IOException e) {
			//e.printStackTrace();
			System.out.println("Erro durante o envio da mensagem do cliente ao servidor");
			System.out.println("Erro: " + e.getMessage());
			
		} finally {
			fechaSocket(socket);
		}
	}
	
	/**
	 * Finaliza um socket, desconectando o cliente conectado pelo socket informado e o servidor
	 * @param socket socket a ser finalizado
	 * @throws IOException 
	 */
	private void fechaSocket(Socket socket) throws IOException {
		socket.close();
	}
	
	
	public static void main(String[] args) {
		Client client = new Client();
		try {
			client.criaSocket("127.0.0.1", 2525);
			
		} catch (IOException e) {
			e.printStackTrace();
		}
		
	}
	
}
