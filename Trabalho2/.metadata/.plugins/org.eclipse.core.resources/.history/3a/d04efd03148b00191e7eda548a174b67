package server;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.Socket;


public class Conexao extends Thread implements Runnable {
	protected Socket socket;
	protected Server servidor;
	protected Client cliente;
	protected boolean connection;
	
	public Conexao(Socket socket) {
		this.socket = socket;
		this.connection = true;
	}

	public void setServer(Server servidor) {
		this.servidor = servidor;
	}
	
	public void setClient(Client cliente) {
		this.cliente = cliente;
	}
	
	public Conexao getConexao() {
		return this;
	}
	
	@Override
	public void run() {
		try {
			BufferedReader input = new BufferedReader(new InputStreamReader(socket.getInputStream()));

			socket.get
			while (true) {
				String linha = input.readLine();

				if (linha == "/end") {
					System.out.println("Fim da conexão");
					this.connection = false;
					this.interrupt();
					break;
				}

				System.out.println(linha);
				System.out.println("> ");

			}

		} catch (IOException e) {
			System.out.println(e.getMessage());
		}
		
	}

}
